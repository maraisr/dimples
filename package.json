		"graceful-fs": "^4.1.3",
		"jade": "^1.11.0",
		"uglify-js": "^2.6.2"
	},
	"devDependencies": {
		"babel-preset-es2015-rollup": "^1.1.1",
		"babel-preset-stage-2": "^6.5.0",
		"chai": "^3.5.0",
		"codecov": "^1.0.1",
		"istanbul": "^0.4.2",
		"mocha": "^2.4.5",
		"rollup": "^0.25.8",
		"rollup-plugin-babel": "^2.4.0",
		"rollup-plugin-includepaths": "^0.1.2"
